# EditorConfig is awesome: http://EditorConfig.org
root = true
# Unix shell scripts
[*.sh]
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

# CI configuration files
[{Vagrantfile}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

# Markdown/reStructuredText documentation files
[*.{md,markdown,rst}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
